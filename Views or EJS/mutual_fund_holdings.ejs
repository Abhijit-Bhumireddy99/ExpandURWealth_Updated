            <form class="d-flex">
              <input class="form-control me-2" type="search" placeholder="Search about stocks here..." aria-label="Search">
              <button class="btn btn-success" type="submit">Explore</button>
            </form>
          </div>
        </div>
      </nav>

    <!-- Your portfolio heading -->
    <div class="container">
        <h4 id="heading-1">Your Portfolio</h4>
    </div>

    <!-- Total investment, current value, and returns -->
    <div class="container">
        <div class="row">
          <div class="col">
            <h6>Total Investment Value (₹)</h6> <!-- 1st column info -->
            <p id="total-investment">0</p>
          </div>
          <div class="col">
            <h6>Total Current Value (₹)</h6><!-- 2nd column info -->
            <p id="total-current">0</p>
          </div>
          <div class="col">
            <h6>Total Returns (₹)</h6><!-- 3rd column info -->
            <p id="total-returns">0</p>
          </div>
          <div class="col">
            <h6>Total Returns (%)</h6>
            <p id="total-returns-percent">0</p><!-- 4th column info -->
          </div>
        </div>
      </div>

<!-- Mutual Fund Holdings Table -->
<table class = table-light id="stock-table">
    <thead>
      <tr class="table-light">
        <th>Mutual Fund Name</th>
        <th>Asset Class</th>
        <th>Risk / Volatility</th>
        <th>Curr. NAV (₹)</th>
        <th>Avg. NAV (₹)</th>
        <th>Bal. Units</th>
        <th>Investment (₹)</th>
        <th>Curr. Value (₹)</th>
        <th>Returns (₹)</th>
        <th>Returns (%)</th>
        <th>XIRR</th>
    </tr>
    </thead>
    <tbody>
      <tr class="stock-row" data-stock="PARAG PARIKH FLEXI CAP FUND">
        <td id="mf-a">Parag Parikh Flexi Cap Fund</td>
        <td>Equity</td>
        <td>Very High</td>
        <td>55.82</td>
        <td>51.44</td>
        <td>369.31</td>
        <td id="invest-mf-1">18999</td>
        <td id="current-mf-1">20715</td>
        <td id="returns-mf-1"></td>
        <td id="returns-mf-1-percent"></td>
        <td id="xirr-mf-1">+10.51</td>
      </tr>
    
      <tr class="stock-row" data-stock="ICICI PRUDENTIAL MULTI SECTOR FUND">
        <td id="mf-b">ICICI Prudential Multi Sector Fund</td>
        <td>Equity</td>
        <td>Very High</td>
        <td>140.72</td>
        <td>161.31</td>
        <td>30.372</td>
        <td id="invest-mf-2">4899</td>
        <td id="current-mf-2">4298</td>
        <td id="returns-mf-2"></td>
        <td id="returns-mf-2-percent"></td>
        <td id="xirr-mf-2">-10.34</td>
      </tr>
    </tbody>
  </table>


  <!-- One-time Investement or SIP Investment pop up -->
  <div class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <a href="/mutual_fund_details" id="about-stock"><h5 class="stock-name"></h5></a>
      <br>
      <div class="buy-sell-options">
        <button class="buy-button">One Time Invest</button>
        <button class="sell-button">SIP Invest</button>
      </div>
    </div>
  </div>
  
  


    <!-- adding bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
